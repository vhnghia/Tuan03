<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuanLySach">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tac Gia: "
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/edt_TacGia_QLSXML"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            />
        <Spinner
            android:id="@+id/sp_XML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Sach:"
            android:textSize="28sp"/>

        <EditText
            android:id="@+id/edt_TenSach_QLSXML"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngay XB:"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/edt_NXB_QLSXML"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_NXB_QLSXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_Add_QLSXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Them Sach"
        android:gravity="center"
        android:textSize="24sp"/>

    <ListView
        android:id="@+id/lv_QLSXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>